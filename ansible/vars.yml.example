# Copy this file to vars.yml and fill in your values
# cp vars.yml.example vars.yml

# VM IP addresses
vm1_ip: "192.168.1.10"
vm2_ip: "192.168.1.11"
vm3_ip: "192.168.1.12"

# Virtual IP address (VIP) for keepalived
vip_address: "192.168.1.100"

# Network interface for keepalived (e.g., eth0, ens33, enp0s3)
# Leave empty to auto-detect
keepalived_interface: ""

# Keepalived authentication password
keepalived_auth_pass: "CHANGE_THIS_TO_A_STRONG_PASSWORD"

# MinIO configuration
minio_root_user: "minioadmin"
minio_root_password: "CHANGE_THIS_TO_A_LONG_PASSWORD"
minio_image: "docker.arvancloud.ir/minio/minio:latest"

# SSH configuration
ssh_user: "root"
ssh_key_path: "~/.ssh/id_rsa"
